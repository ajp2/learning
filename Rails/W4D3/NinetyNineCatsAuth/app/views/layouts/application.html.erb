<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <h1>Logged in as <%= current_user.user_name %></h1>
      <%= button_to "Logout", session_url, method: :delete %>
    <% else %>
      <%= link_to "Login", new_session_url %>
      <%= link_to "Signup", new_user_url %>
    <% end %>
    <%= yield %>
  </body>
</html>
